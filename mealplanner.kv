#:kivy 2.0.0

<TitleScreen>:
    md_bg_color: '#FFFFFF'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(30)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(20)
        md_bg_color: "#FFFFFF"

        Image:
            source: 'assets/logo.png'
            halign: "center"
            size_hint_y: None  # Tells the layout to ignore the size_hint in y dir
            height: dp(400)  # The fixed height you want
            allow_stretch: True
            
    
        MDGridLayout:
            cols: 2
            row_default_height: 20
            spacing: dp(20)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: dp(15)

            MDRaisedButton:
                text: '当前饮食计划'
                font_name: "assets/DroidSansFallback.ttf"
                on_release: app.switch_to_weekly_meal_plan_screen()
                size_hint_x : .75
                pos_hint: {'x': .1, 'y': .55} 
                md_bg_color :'#581618'
                text_color: "#F2EDDB"
                font_style: 'Subtitle1'
                font_size: dp(22)


            MDRaisedButton:
                text: '加入新食谱'
                font_name: "assets/DroidSansFallback.ttf"
                on_release: app.switch_to_new_recipe_screen()
                size_hint_x : .75
                pos_hint: {'x': .1, 'y': .55}
                md_bg_color :'#581618'
                text_color: "#F2EDDB"
                font_style: 'Subtitle1'
                font_size: dp(22)

            MDRaisedButton:
                text: '已有食谱'
                font_name: "assets/DroidSansFallback.ttf"
                on_release: app.switch_to_recipes_list_screen()
                size_hint_x : .75
                pos_hint: {'x': .1, 'y': .55}
                md_bg_color :'#581618'
                text_color: "#F2EDDB"
                font_style: 'Subtitle1'
                font_size: dp(22)

            MDRaisedButton:
                text: u'购物清单'
                font_name: "assets/DroidSansFallback.ttf"
                on_release: app.switch_to_shopping_list_screen()
                size_hint_x : .75
                pos_hint: {'x': .1, 'y': .55}
                md_bg_color :'#581618'
                text_color: "#F2EDDB"
                font_style: 'Subtitle1'
                font_size: dp(22)

<RecipeListScreen>:
    md_bg_color: "#FFFFFF"  
    
    MDBoxLayout:
        orientation:'vertical'

        MDTopAppBar:
            title: 'List of Recipes'
            font_name: "assets/DroidSansFallback.ttf"
            left_action_items:[["arrow-left", lambda x: app.root.get_screen('title')]] # TODO MODIFY
            md_bg_color :'#581618'
            text_color: "#F2EDDB"

    
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: 'Dish List and Modify'
                theme_text_color: "Primary"
            MDScrollView:
                MDGridLayout:
                    id: recipe_grid
                    cols: 1

<NewRecipeScreen>:
    md_bg_color: "#FFFFFF"  
    
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Add a new recipe'
            font_name: "assets/DroidSansFallback.ttf"
            left_action_items:[["arrow-left", lambda x: app.root.get_screen('title')]] # TODO MODIFY
            md_bg_color :'#581618'
            text_color: "#F2EDDB"

        MDLabel:
            text: 'Enter Recipe Details'
            theme_text_color: "Primary"

        MDTextField:
            hint_text: 'Recipe Name'
            id: dish_name

        MDRaisedButton:
            text: 'Add Dish'
            on_release: app.add_dish()
